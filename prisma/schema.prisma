generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  listings Listing[]
  displayname String @default("")
  biography String @default("")
}

model Listing {
  id          Int      @id @default(autoincrement())
  image       Bytes[] @db.ByteA
  title       String
  price       Int
  type        Type
  description String
  category    Category []
  paymentType String []
  condition   Condition
  apparel     String []
  size        String []
  color       String []
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  active     Boolean  @default(true)
}

enum Type {
  selling
  buying
  service
}

enum Category {
  clothing_accessories
  furniture_decor
  school_supplies
  books
  electronics
  sports_equipment
  music_instruments
  transportation
  misc
}

enum PaymentType {
  cash
  paypal
  zelle
  venmo
}

enum Condition {
  clothing_accessories
  brand_new_unboxed
  brand_new_openbox
  like_new
  lightly_used
  well_loved
  not_working
  parts_missing
}

enum Apparel {
  women
  men
  unisex
}

enum Apparel_Size {
  xxs
  xs
  s
  m
  l
  xl
  xxl
  xxxl
}

enum Color {
  light
  dark
  neutral
  colorful
  warm
  cool
}