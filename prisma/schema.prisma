generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  keycloakId  String    @unique 
  name        String
  email       String    @unique
  listings    Listing[]
  displayName String    @default("")
  biography   String    @default("")
  favoriteListings FavoriteListing[]
}

model ListingImage {
  id         Int     @id @default(autoincrement())
  bucketName String
  fileName   String
  checksum   String
  listingId  Int
  listing    Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}

model Listing {
  id          Int            @id @default(autoincrement())
  title       String
  price       Int
  type        Type
  description String
  images      ListingImage[]
  acceptedPaymentTypes String[]
  condition   Condition
  category    Category
  userId      Int
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  user        User           @relation(fields: [userId], references: [id])
  active      Boolean        @default(true)
  favoritedBy FavoriteListing[]
  clothing    Clothing?    
}

model FavoriteListing {
  id        Int      @id @default(autoincrement())
  userId    Int
  listingId Int
  savedAt   DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  listing   Listing  @relation(fields: [listingId], references: [id])
  
  @@unique([userId, listingId])
}

model Clothing {
  listingId         Int     @id
  apparelSize       Apparel_Size
  apparelGender     Apparel_Gender
  listing           Listing @relation(fields: [listingId], references: [id])
}

enum Type {
  selling
  // buying
  service
}

enum Category {
  clothing_accessories
  furniture_decor
  school_supplies
  books
  electronics
  sports_equipment
  music_instruments
  transportation
  misc
}

enum PaymentType {
  cash
  paypal
  zelle
  venmo
}

enum Condition {
  clothing_accessories
  brand_new_unboxed
  brand_new_openbox
  like_new
  lightly_used
  well_loved
  not_working
  parts_missing
}

enum Apparel_Gender {
  women
  men
  unisex
}

enum Apparel_Size {
  xxs
  xs
  s
  m
  l
  xl
  xxl
  xxxl
}